@model List<MPR.Models.Games.EspnGame>
<table class="table" id="example">
    <tbody>
        @foreach (var game in Model)
        {
        <tr>

            <td>@game.AwayTeam</td>
            @if (@game.NotifyAway)
            {
                <td style="font-weight: bold">@game.AwayTeamScore</td>
            }
            else
            {
                <td>@game.AwayTeamScore</td>
            }

            <td>@game.HomeTeam</td>

            @if (@game.NotifyHome)
            {
                <td style="font-weight: bold">@game.HomeTeamScore</td>
            }
            else
            {
                <td>@game.HomeTeamScore</td>
            }

            <td>
                @if (@game.TimeLink == null)
                {
                    @game.Time
                }
                else
                {
                    <a href="@game.TimeLink">@game.Time</a>
                }
            </td>
        </tr>
        }
    </tbody>
</table>
