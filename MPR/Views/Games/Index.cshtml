@{
    ViewBag.Title = "Games";
}

<div class="container-fluid">
    <div class="container-fluid">
        <div class="row justify-content-center p-3">
            <div class="col-auto">
                <div class="btn-group btn-group-toggle" data-toggle="buttons">
                    <label class="btn btn-secondary">
                        <input id="nflRadio" type="radio" name="sportType" value="nfl" onchange="loadPartialView()">NFL
                    </label>
                    <label class="btn btn-secondary">
                        <input id="nbaRadio" type="radio" name="sportType" value="nba" onchange="loadPartialView()">NBA
                    </label>
                    <label class="btn btn-secondary">
                        <input id="nhlRadio" type="radio" name="sportType" value="nhl" onchange="loadPartialView()">NHL
                    </label>
                    <label class="btn btn-secondary active">
                        <input id="owlRadio" type="radio" name="sportType" value="owl" onchange="loadPartialView()" checked>OWL Games
                    </label>
                    <label class="btn btn-secondary">
                        <input id="owlStRadio" type="radio" name="sportType" value="owlSt" onchange="loadPartialView()">OWL Standings
                    </label>
                </div>
            </div>
        </div>
        <div class="row justify-content-center pb-3">
            <div class="col-auto">
                <div id="last_update_time" class="text-secondary"></div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <div id="games_partial"></div>
            </div>
        </div>
    </div>    
</div>

<script>
    function loadPartialView() {
        var offset = new Date().getTimezoneOffset();
        $.ajax({
            url: "@Url.Action("Games", "Games")" + "?gameType=" + getSelectedSportType() + "&offset=" + offset,
            type: 'GET', // <-- make a async request by GET
            dataType: 'html', // <-- to expect an html response
            cache: false,
            success: function(result) {
                $('#games_partial').html(result);
                var currentdate = new Date();
                var hours = currentdate.getHours().toString();
                if (hours.length === 1) {
                    hours = "0" + hours;
                }

                var minutes = currentdate.getMinutes().toString();
                if (minutes.length === 1) {
                    minutes = "0" + minutes;
                }

                var seconds = currentdate.getSeconds().toString();
                if (seconds.length === 1) {
                    seconds = "0" + seconds;
                }

                var datetime = "Last updated at: " + hours + ":"
                                + minutes + ":"
                                + seconds;
                $('#last_update_time').html(datetime);
        }
    });
    }

    function getSelectedSportType() {
        var sportType = $("input[name=sportType]:checked").val();
        return sportType;
    }

    $(function () {
        loadPartialView(); // first time
        setInterval(loadPartialView, 5000);
    });
</script>
